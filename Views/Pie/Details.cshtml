@model Pie
<h3 class="my-5">
    @Model.Name
</h3>
<div class="row gx-5">
    <img src="@Model.ImageThumbnailUri" class="img-fluid col-5" alt="@Model.Name" />
    <div class="col-7">
        <h4>@Model.ShortDesic</h4>
        <p>@Model.LongDesic</p>
        <h3 class="pull-right">@Model.PiePrice.ToString("c")</h3>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-secondary"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-pieId="@Model.PieId"> Add to cart </a>
            </p>
        </div>

    </div>


</div>
